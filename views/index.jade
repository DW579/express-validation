extends layout 

block content 

  div.container
    form(action='/' method='post')
      div.errors 
        if errors
          for error in errors 
            p= error
      h1 Sign Up
      div.form-group
        label(for="author") Name
        input.form-control(type="text" id="name" name='name' value= user ? user.name : '' placeholder="Your Name")
      div.form-group
        label(for="title") Phone Number
        input.form-control(type="text" id="phone" name='phone' value = user ? user.phone : '' placeholder="774-992-3345")
      div.form-group
        label(for="title") Email
        input.form-control(type="text" id="email" name='email' value = user ? user.email : '' placeholder="you@somewhere.com")
        button.btn.btn-primary(type="submit") Submit
